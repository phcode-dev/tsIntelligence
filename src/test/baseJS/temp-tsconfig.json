{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
